<!DOCTYPE html>
<html lang="en">
    <%- include("../components/head.ejs", { title: "Inventory Application" }) %>
    <body>
        <%- include("../components/header.ejs") %>
        <main>
            <div class="categories-container">
                <section class="categories">
                    <h1>Categories</h1>
                    <% if (categories.length) { %>
                        <div>
                            <% for( let i = 0; i < categories.length; i++ ) { %>
                                <section class="category">
                                    <div>
                                        <a href="/categories/<%= categories[i].id %>"><%= categories[i].name %></a>
                                    </div>
                                    <div>
                                        <a href="/categories/<%= categories[i].id %>/edit">Edit</a>
                                        <a href="/categories/<%= categories[i].id %>/delete">Delete</a>
                                    </div>
                                </section>
                            <% } %>
                        </div>
                    <% } else { %>
                        <section class="no-categories">
                            <h2>There is nothing to see here.</h2>
                        </section>
                    <% } %>
                </section>
                <div>
                    <a href="/categories/new">New category</a>
                </div>
            </div>
        </main>
        <%- include("../components/footer.ejs") %>
    </body>
</html>
